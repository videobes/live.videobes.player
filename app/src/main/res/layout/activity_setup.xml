<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logoLive"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo_live_videobes"
            android:adjustViewBounds="true"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:text="⚠️  Modo Kiosk (Travamento do Dispositivo)"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Este aplicativo dedica o dispositivo exclusivamente ao Live Videobes Player. Após ativado, o aparelho ficará preso ao app — não será possível voltar ao Android, abrir outros aplicativos ou acessar configurações.\n\nSomente administradores conseguem desbloquear:"
            android:textColor="#cccccc"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Códigos numéricos:\n• (*999) — Modo Admin\n• (*222) — Configurações\n• CTRL + Z — Admin rápido\n\nCódigos por toque (para tablets/TVs):\n• 5 toques no canto superior esquerdo\n• 3 toques no canto inferior direito"
            android:textColor="#bbbbbb"
            android:textSize="15sp"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Opção 1 -->
        <CheckBox
            android:id="@+id/checkAccept"
            android:text="Aceito o Modo Kiosk e desejo instalar o Live Videobes Player."
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Opção 2 -->
        <CheckBox
            android:id="@+id/checkDecline"
            android:text="Não aceito o Kiosk. Abortar instalação."
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnContinue"
            android:text="CONTINUAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#810EF8"
            android:textColor="#ffffff"
            android:enabled="false"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnAbort"
            android:text="ABORTAR INSTALAÇÃO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#444444"
            android:textColor="#ffffff"
            android:enabled="false"/>

    </LinearLayout>
</ScrollView>
