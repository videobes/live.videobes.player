<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:background="#000" />

    <ImageView
        android:id="@+id/imagePlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone" /> 
    
    <LinearLayout
        android:id="@+id/setupOverlay"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#B3000000"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Live Videobes Player"
            android:textSize="22sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Conecte à internet e escolha uma pasta de mídia."
            android:textColor="#fff"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnWifi"
            android:text="Conectar Wi-Fi"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnPickFolder"
            android:text="Escolher pasta de mídia"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/btnSecretMenu"
            android:src="@drawable/ic_more_vert"
            android:tint="#ccc"
            android:layout_marginTop="16dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>

</FrameLayout>
